<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileScr">



    <ImageView
        android:layout_width="29dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/backicon"
        />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:id="@+id/editProBackBtn"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="18sp"
        android:textColor="#3e4095"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/editProfileHeader"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/defpic"
                    android:id="@+id/mainProPicture"
                    />
                 <Button
                     android:layout_width="100dp"
                     android:layout_height="100dp"
                     android:background="@android:color/transparent"
                     android:id="@+id/mainProPictureBtn"
                     />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mainProPicture"
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/editProSinglzeID"
                    android:textAlignment="center"
                    android:text=""
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/mainProPicture"
                    android:layout_marginTop="5dp"
                    android:id="@+id/basiceditdataholder"
                    android:layout_toRightOf="@+id/mainProPicture"
                    android:layout_marginLeft="15dp"
                    >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        >

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/indflag"
                            android:scaleType="fitCenter"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="India"
                            android:textSize="8sp"
                            android:textColor="@android:color/black"
                            android:id="@+id/editProCountryLbl"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        >

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/maleicon"
                            android:scaleType="fitCenter"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="Male"
                            android:textSize="8sp"
                            android:textColor="@android:color/black"
                            android:id="@+id/editProGenderLbl"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        >
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/cakeicon"
                            android:scaleType="fitCenter"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="28 Jan, 2002"
                            android:textSize="8sp"
                            android:textColor="@android:color/black"
                            android:id="@+id/editProDOBLbl"
                            />

                    </RelativeLayout>


                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/mainProPicture"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/editNameHolder"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:hint="Name"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/black"
                        android:id="@+id/editNameTxt"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black"
                        android:layout_alignParentBottom="true"
                        ></LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/mainProPicture"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@+id/editNameHolder"
                    android:id="@+id/editStatusHolder"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:maxLength="25"
                        android:hint="Profile Status"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/black"
                        android:id="@+id/editStatusTxt"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black"
                        android:layout_alignParentBottom="true"
                        ></LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/mainProPicture"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@+id/editStatusHolder"
                    android:id="@+id/editLocationHolder"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:hint="Location"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/black"
                        android:id="@+id/editLocationTxt"
                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:id="@+id/selLocationBtn"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black"
                        android:layout_alignParentBottom="true"
                        ></LinearLayout>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    android:layout_below="@id/basiceditdataholder"
                    android:layout_marginTop="15dp"
                    android:id="@+id/editimagesHolder"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/defpicedit"
                            android:id="@+id/editPic2"
                            android:scaleType="fitCenter"
                            android:layout_margin="1dp"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:id="@+id/editPic2Btn"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        >
                        <ImageView
                            android:layout_margin="1dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/editPic3"
                            android:src="@drawable/defpicedit"
                            android:scaleType="fitCenter"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:id="@+id/editPic3Btn"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/defpicedit"
                            android:scaleType="fitCenter"
                            android:id="@+id/editPic4"
                            android:layout_margin="1dp"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:id="@+id/editPic4Btn"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/defpicedit"
                            android:scaleType="fitCenter"
                            android:id="@+id/editPic5"
                            android:layout_margin="1dp"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:id="@+id/editPic5Btn"
                            />
                    </RelativeLayout>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/editimagesHolder"
                    android:layout_marginTop="10dp"
                    android:id="@+id/editTagsHolder"
                    >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Tags"
                        android:layout_centerVertical="true"
                        android:textSize="13sp"
                        android:textColor="@android:color/black"
                        android:id="@+id/tagsHeaderedit"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="dance, music, acting"
                        android:imeOptions="actionDone"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tagsHeaderedit"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/editProTagsTxt"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black"
                        android:layout_toRightOf="@+id/tagsHeaderedit"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentBottom="true"
                        ></LinearLayout>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editTagsHolder"
                    android:layout_marginTop="10dp"
                    android:id="@+id/editAboutMeHolder"
                    >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="About Me"

                        android:textSize="13sp"
                        android:textColor="@android:color/black"
                        android:id="@+id/aboutMeHeaderedit"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="Tell us something about yourself..."
                        android:imeOptions="actionDone"
                        android:gravity="top|left"
                        android:maxLength="255"
                        android:maxLines="20"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/aboutMeHeaderedit"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/editProAboutMeTxt"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black"
                        android:layout_toRightOf="@+id/aboutMeHeaderedit"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentBottom="true"
                        ></LinearLayout>
                </RelativeLayout>

                <Button
                    android:layout_width="300dp"
                    android:layout_height="44dp"
                    android:id="@+id/cUpdateProBtn"
                    android:background="@drawable/greenbtn"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/editAboutMeHolder"
                    android:layout_marginTop="40dp"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/editproloadingScr"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:alpha="0.5"
            />

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >

            <com.github.ybq.android.spinkit.SpinKitView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/num_spin_kit"
                style="@style/SpinKitView.CubeGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                app:SpinKit_Color="@color/colorNavTxt"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please wait..."
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_below="@+id/num_spin_kit"
                android:layout_marginTop="1dp"
                android:id="@+id/edit_verifyingLbl"
                />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>