<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".filtersScr">

    <ImageView
        android:layout_width="29dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/backicon"
        />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:id="@+id/filterBackBtn"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter Streams"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/filterHeader"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1e1e1"
        android:layout_marginTop="60dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        android:id="@+id/countryFilterHolder"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country"
                android:layout_centerVertical="true"
                android:id="@+id/filterCountryHeader"
                android:textSize="15sp"
                android:textColor="#828282"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="India"
                android:textSize="15sp"
                android:textColor="#828282"
                android:layout_centerVertical="true"
                android:id="@+id/countryValLbl"
                />
            <ImageView
                android:layout_width="8dp"
                android:layout_height="4dp"
                android:src="@drawable/downarrow"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/distanceFilterHolder"
        android:layout_below="@+id/countryFilterHolder"

        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:layout_centerVertical="true"
                android:id="@+id/filterdistanceHeader"
                android:textSize="15sp"
                android:textColor="#828282"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#b8b9bb"
                android:layout_centerVertical="true"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    >

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:src="@drawable/cradiooff"
                        android:layout_centerInParent="true"
                        android:id="@+id/radionearbyImg"
                        />
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/transparent"
                        android:id="@+id/radionearbyBtn"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nearby"
                        android:textSize="6sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="#828282"
                        android:layout_below="@+id/radionearbyImg"
                        android:layout_marginTop="2dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    >
                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:src="@drawable/cradiooff"
                        android:layout_centerInParent="true"
                        android:id="@+id/radiocityImg"
                        />
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:textColor="@android:color/transparent"
                        android:background="@android:color/transparent"
                        android:id="@+id/radiocityBtn"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:textSize="6sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="#828282"
                        android:layout_below="@+id/radiocityImg"
                        android:layout_marginTop="2dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    >
                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:src="@drawable/cradiooff"
                        android:layout_centerInParent="true"
                        android:id="@+id/radiostateImg"
                        />
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:textColor="@android:color/transparent"
                        android:background="@android:color/transparent"
                        android:id="@+id/radiostateBtn"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="State"
                        android:textSize="6sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="#828282"
                        android:layout_below="@+id/radiostateImg"
                        android:layout_marginTop="2dp"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    >
                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:src="@drawable/cradiooff"
                        android:layout_centerInParent="true"
                        android:id="@+id/radiocountryImg"
                        />
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:textColor="@android:color/transparent"
                        android:background="@android:color/transparent"
                        android:id="@+id/radiocountryBtn"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Country"
                        android:textSize="6sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="#828282"
                        android:layout_below="@+id/radiocountryImg"
                        android:layout_marginTop="2dp"
                        />

                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/genderFilterHolder"
        android:layout_below="@+id/distanceFilterHolder"

        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_centerVertical="true"
                android:id="@+id/filtergenderHeader"
                android:textSize="15sp"
                android:textColor="#828282"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#b8b9bb"
                android:layout_centerVertical="true"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    >
                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:src="@drawable/cradiooff"
                        android:layout_centerInParent="true"
                        android:id="@+id/radiobothImg"
                        />
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/transparent"
                        android:id="@+id/radiobothBtn"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Both"
                        android:textSize="6sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="#828282"
                        android:layout_below="@+id/radiobothImg"
                        android:layout_marginTop="2dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    >
                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:src="@drawable/cradiooff"
                        android:layout_centerInParent="true"
                        android:id="@+id/radiomenImg"
                        />
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:textColor="@android:color/transparent"
                        android:background="@android:color/transparent"
                        android:id="@+id/radiomenBtn"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Men"
                        android:textSize="6sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="#828282"
                        android:layout_below="@+id/radiomenImg"
                        android:layout_marginTop="2dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    >
                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:src="@drawable/cradiooff"
                        android:layout_centerInParent="true"
                        android:id="@+id/radiowomenImg"
                        />
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:textColor="@android:color/transparent"
                        android:background="@android:color/transparent"
                        android:id="@+id/radiowomenBtn"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Women"
                        android:textSize="6sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="#828282"
                        android:layout_below="@+id/radiowomenImg"
                        android:layout_marginTop="2dp"
                        />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>




</RelativeLayout>